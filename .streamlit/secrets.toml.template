# Copy this file to secrets.toml and fill in your actual values

[auth]
username = "your_username"
password_hash = "your_password_hash"  # Use hashlib.sha256("your_password".encode()).hexdigest()

[perplexity]
api_key = "pplx-your-perplexity-api-key-here"
base_url = "https://api.perplexity.ai"

# Optional: Database settings (if you want to use a different database)
[database]
connection_string = "sqlite:///data/perplexity.db"
